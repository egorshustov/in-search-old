<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.egorshustov.vpoiske.search.SearchFragment"
        android:label="@string/app_name">

        <action
            android:id="@+id/action_searchFragment_to_searchParamsFragment"
            app:destination="@id/searchParamsFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_searchFragment_to_searchListFragment"
            app:destination="@id/searchListFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

    </fragment>

    <fragment
        android:id="@+id/searchParamsFragment"
        android:name="com.egorshustov.vpoiske.searchparams.SearchParamsFragment"
        android:label="@string/new_search_title" />

    <fragment
        android:id="@+id/searchListFragment"
        android:name="com.egorshustov.vpoiske.searchlist.SearchListFragment"
        android:label="@string/search_list_title" />

</navigation>