<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_poiske_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.egorshustov.vpoiske.main.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_mainFragment_to_searchParamsFragment"
            app:destination="@id/searchParamsFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_mainFragment_to_searchListFragment"
            app:destination="@id/searchListFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_mainFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

    </fragment>

    <fragment
        android:id="@+id/searchParamsFragment"
        android:name="com.egorshustov.vpoiske.searchparams.SearchParamsFragment"
        android:label="@string/search_params_title"
        tools:layout="@layout/fragment_search_params" />

    <fragment
        android:id="@+id/searchListFragment"
        android:name="com.egorshustov.vpoiske.searchlist.SearchListFragment"
        android:label="@string/search_list_title"
        tools:layout="@layout/fragment_search_list">

        <action
            android:id="@+id/action_searchListFragment_to_searchFragment"
            app:destination="@id/searchFragment" />

    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.egorshustov.vpoiske.search.SearchFragment"
        android:label="@string/search_title"
        tools:layout="@layout/fragment_search">

        <argument
            android:name="searchId"
            app:argType="long" />

    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.egorshustov.vpoiske.login.LoginFragment"
        android:label="@string/text_authorization"
        tools:layout="@layout/fragment_login" />

</navigation>