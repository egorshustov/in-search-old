<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/v_poiske_graph"
    app:startDestination="@id/searchProcessFragment">

    <fragment
        android:id="@+id/searchProcessFragment"
        android:name="com.egorshustov.vpoiske.searchprocess.SearchProcessFragment"
        android:label="@string/app_name">

        <action
            android:id="@+id/action_searchProcessFragment_to_searchParamsFragment"
            app:destination="@id/searchParamsFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

        <action
            android:id="@+id/action_searchProcessFragment_to_searchListFragment"
            app:destination="@id/searchListFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit" />

    </fragment>

    <fragment
        android:id="@+id/searchParamsFragment"
        android:name="com.egorshustov.vpoiske.searchparams.SearchParamsFragment"
        android:label="@string/search_params_title" />

    <fragment
        android:id="@+id/searchListFragment"
        android:name="com.egorshustov.vpoiske.searchlist.SearchListFragment"
        android:label="@string/search_list_title">

        <action
            android:id="@+id/action_searchListFragment_to_searchFragment"
            app:destination="@id/searchFragment" />

    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.egorshustov.vpoiske.search.SearchFragment"
        android:label="@string/search_title">

        <argument
            android:name="searchId"
            app:argType="long" />

    </fragment>

</navigation>