<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userListFragment">

    <!--todo add animations-->
    <fragment
        android:id="@+id/userListFragment"
        android:name="com.egorshustov.vpoiske.userlist.UserListFragment"
        android:label="@string/app_name">

        <action
            android:id="@+id/action_userListFragment_to_newSearchFragment"
            app:destination="@id/newSearchFragment" />

        <action
            android:id="@+id/action_userListFragment_to_searchListFragment"
            app:destination="@id/searchListFragment" />

    </fragment>

    <fragment
        android:id="@+id/newSearchFragment"
        android:name="com.egorshustov.vpoiske.newsearch.NewSearchFragment"
        android:label="@string/new_search_title" />

    <fragment
        android:id="@+id/searchListFragment"
        android:name="com.egorshustov.vpoiske.searchlist.SearchListFragment"
        android:label="@string/search_list_title" />

</navigation>