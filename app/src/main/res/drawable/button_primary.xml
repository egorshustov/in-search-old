<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <ripple android:color="?themeButtonsAnimationsColor">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?themePrimaryButtonEnabledBackgroundColor" />
                    <corners android:radius="@dimen/buttons_corners_radius" />
                </shape>
            </item>
        </ripple>
    </item>

    <item>
        <ripple android:color="?themeButtonsAnimationsColor">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?themePrimaryButtonDisabledBackgroundColor" />
                    <corners android:radius="@dimen/buttons_corners_radius" />
                </shape>
            </item>
        </ripple>
    </item>

</selector>