<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="user"
            type="com.egorshustov.vpoiske.data.User" />

        <variable
            name="viewmodel"
            type="com.egorshustov.vpoiske.main.MainViewModel" />
    </data>

    <androidx.cardview.widget.CardView xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_user_photo"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_margin="1dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        cardview:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_user_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#002d2d2d"
                android:onClick="@{() -> viewmodel.openUser(user.id)}"
                android:scaleType="centerCrop" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>