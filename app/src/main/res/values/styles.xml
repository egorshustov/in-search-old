<resources>

    <style name="VPoiskeTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">?themeBackgroundColorPrimary</item>
        <item name="colorPrimaryDark">?themeBackgroundColorSecondary</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="android:textColorPrimary">?themeTextColorPrimary</item>
        <item name="android:textColorSecondary">?themeTextColorSecondary</item>
        <item name="actionMenuTextColor">?themeToolbarTextColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:navigationBarColor">?themeNavigationBarColor</item>
        <item name="android:statusBarColor">?themeStatusBarColor</item>
    </style>

    <style name="VPoiskeTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="VPoiskeTheme.NoActionBar.Light">
        <item name="themeBackgroundColorPrimary">@android:color/white</item>
        <item name="themeBackgroundColorSecondary">@color/colorHavelockBlue</item>
        <item name="themeColorAccent">@color/colorDenim</item>
        <item name="themeTextColorPrimary">@android:color/black</item>
        <item name="themeTextColorSecondary">@color/colorStormGrey</item>
        <item name="themeTextColorTertiary">@color/colorSteelBlue</item>
        <item name="themeNavigationBarColor">@color/colorSolitude</item>
        <item name="themeStatusBarColor">@color/colorHavelockBlue</item>
        <item name="themeToolbarTextColor">@android:color/white</item>
        <item name="themeFabIconTintColor">@android:color/white</item>
        <item name="themeUserPhotoBackgroundColor">@color/colorSolitude</item>
        <item name="themeSeparatorBackgroundColor">@color/colorGainsboro</item>
        <item name="themePrimaryButtonEnabledBackgroundColor">@color/colorPictonBlue</item>
        <item name="themePrimaryButtonDisabledBackgroundColor">@color/colorTropicalBlue</item>
        <item name="themePrimaryButtonTextColor">@android:color/white</item>
        <item name="themeSecondaryButtonBackgroundColor">@android:color/white</item>
        <item name="themeSecondaryButtonTextColor">@color/colorSteelBlue</item>
        <item name="themeButtonsAnimationsColor">@color/colorSolitude</item>
        <item name="themeEditTextBackgroundColor">@color/colorSolitude3</item>
        <item name="themeEditTextBorderColor">@color/colorSolitude2</item>
        <item name="themeEditTextTextColor">@android:color/black</item>
        <item name="themeEditTextHintColor">@color/colorStormGrey</item>
    </style>

    <style name="VPoiskeTheme.NoActionBar.Dark">
        <item name="themeBackgroundColorPrimary">@color/colorNero</item>
        <item name="themeBackgroundColorSecondary">@color/colorEbony</item>
        <item name="themeColorAccent">@android:color/white</item>
        <item name="themeTextColorPrimary">@color/colorHawkesBlue</item>
        <item name="themeTextColorSecondary">@color/colorManatee</item>
        <item name="themeTextColorTertiary">@android:color/white</item>
        <item name="themeNavigationBarColor">@color/colorCodGray</item>
        <item name="themeStatusBarColor">@color/colorEbony</item>
        <item name="themeToolbarTextColor">@color/colorHawkesBlue</item>
        <item name="themeFabIconTintColor">@color/colorCodGray</item>
        <item name="themeUserPhotoBackgroundColor">@color/colorNightRider</item>
        <item name="themeSeparatorBackgroundColor">@color/colorEclipse</item>
        <item name="themePrimaryButtonEnabledBackgroundColor">@color/colorHawkesBlue</item>
        <item name="themePrimaryButtonDisabledBackgroundColor">@color/colorShuttleGrey</item>
        <item name="themePrimaryButtonTextColor">@color/colorNero</item>
        <item name="themeSecondaryButtonBackgroundColor">@color/colorNero</item>
        <item name="themeSecondaryButtonTextColor">@android:color/white</item>
        <item name="themeButtonsAnimationsColor">@color/colorEclipse</item>
        <item name="themeEditTextBackgroundColor">@color/colorNero2</item>
        <item name="themeEditTextBorderColor">@color/colorNightRider2</item>
        <item name="themeEditTextTextColor">@color/colorHawkesBlue</item>
        <item name="themeEditTextHintColor">@color/colorManatee</item>
    </style>

    <style name="NavigationStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?themeToolbarTextColor</item>
    </style>

    <style name="ButtonPrimaryStyle">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">?themePrimaryButtonTextColor</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonSecondaryStyle">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">?themeSecondaryButtonTextColor</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/edit_rounded</item>
        <item name="android:textColor">?themeEditTextTextColor</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColorHint">?themeEditTextHintColor</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>