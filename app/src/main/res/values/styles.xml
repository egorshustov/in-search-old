<resources>

    <style name="VPoiskeTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">?themeBackgroundColorPrimary</item>
        <item name="colorPrimaryDark">?themeBackgroundColorSecondary</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="android:textColorPrimary">?themeTextColorPrimary</item>
        <item name="android:textColorSecondary">?themeTextColorSecondary</item>
        <item name="android:textColorTertiary">?themeTextColorTertiary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="VPoiskeTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="VPoiskeTheme.NoActionBar.Light">
        <item name="themeBackgroundColorPrimary">@color/colorSolitudeFirst</item>
        <item name="themeBackgroundColorSecondary">@color/colorAliceBlue</item>
        <item name="themeColorAccent">@color/colorDodgerBlue</item>
        <item name="themeTextColorPrimary">@color/colorEbonyClay</item>
        <item name="themeTextColorSecondary">@color/colorPoloBlueFirst</item>
        <item name="themeTextColorTertiary">@color/colorEbonyClay</item>
        <item name="themeSelectedTabTextColor">@color/colorDodgerBlue</item>
    </style>

    <style name="VPoiskeTheme.NoActionBar.Dark">
        <item name="themeBackgroundColorPrimary">@color/colorMidnightExpress</item>
        <item name="themeBackgroundColorSecondary">@color/colorRegalBlue</item>
        <item name="themeColorAccent">@color/colorDodgerBlue</item>
        <item name="themeTextColorPrimary">@color/colorWhite</item>
        <item name="themeTextColorSecondary">@color/colorLightSteelBlue</item>
        <item name="themeTextColorTertiary">@color/colorEbonyClay</item>
        <item name="themeSelectedTabTextColor">@color/colorWhite</item>
    </style>

    <style name="NavigationStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:itemBackground">@color/colorPacificBlue</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorLightSteelBlue</item>
    </style>

</resources>
